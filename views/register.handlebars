<center>
    <div class="create-account">
        <h2>Register</h2>
    </div>
    <form method="POST" action="/users/register" class="login-form">
        <div class="form-group">
            <label for="name">Username:</label>
            <input type="text" class="form-control" id="text-name" name="username" placeholder="Enter Your Username...">
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Your Email Address...">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter Your Passowrd...">
        </div>

        <button type="submit" value="submit" class="btn btn-default"> Submit</button>
    </form>
</center>